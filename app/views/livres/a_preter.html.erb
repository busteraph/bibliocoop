<h1>Livres à préter</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Titre</th>
      <th>Auteur</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bibliotheque.each do |livre| %>
      <tr>
        <td><%= livre.titre %></td>
        <td><%= livre.auteur %></td>
        <td><%= link_to 'Preter', livre %></td>
      </tr>
    <% end %>
  </tbody>
</table>

