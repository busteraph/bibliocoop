<p id="notice"><%= notice %></p>

<h1>Listing Livres</h1>

<table>
  <thead>
    <tr>
      <th>Titre</th>
      <th>Auteur</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @livres.each do |livre| %>
      <tr>
        <td><%= livre.titre %></td>
        <td><%= livre.auteur %></td>
        <td><%= livre.user %></td>
        <td><%= link_to 'Show', livre %></td>
        <td><%= link_to 'Edit', edit_livre_path(livre) %></td>
        <td><%= link_to 'Destroy', livre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

