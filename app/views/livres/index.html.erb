<h1>Livres de la bibliotheque</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Titre</th>
      <th>Auteur</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bibliotheque.each do |livre| %>
      <tr>
        <td><%= livre.titre %></td>
        <td><%= livre.auteur %></td>
        <td><%= link_to 'Consulter', livre %></td>
        <td><%= link_to 'Modifier', edit_livre_path(livre) %></td>
        <td><%= link_to 'Supprimer', livre, method: :delete, data: { confirm: 'Vous voulez supprimer ce livre ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Livres à préter</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Titre</th>
      <th>Auteur</th>
      <th>Propriétaire</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @disponibles.each do |livre| %>
      <tr>
        <td><%= livre.titre %></td>
        <td><%= livre.auteur %></td>
        <td><%= livre.proprietaire.email %></td>
        <td><%= link_to 'Consulter', livre %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Ajouter un livre', new_livre_path %>
